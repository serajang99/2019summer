<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Auto2Activity">

    <TextView
            android:text="가격대는?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView2" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/flex"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3" android:layout_marginTop="32dp"/>
    <Button
            android:text="flex~"
            android:layout_width="200dp"
            android:layout_height="65dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/flex" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/NoMoney" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginBottom="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>
    <Button
            android:text="가성비 ;)"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/middle" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            android:layout_marginBottom="100dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/NoMoney" android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.935"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>
    <Button
            android:text="폐관수련x0x"
            android:layout_width="200dp"
            android:layout_height="105dp"
            android:id="@+id/NoMoney" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:layout_constraintTop_toBottomOf="@+id/flex"
            app:layout_constraintBottom_toTopOf="@+id/middle"/>
</androidx.constraintlayout.widget.ConstraintLayout>