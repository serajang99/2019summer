<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Auto1Activity">

    <TextView
            android:text="선택해줘!"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@id/flex"/>
    <Button
            android:text="술ㄱ?"
            android:layout_width="200dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/flex" app:layout_constraintHorizontal_bias="0.497"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/NoMoney"
            android:layout_marginTop="50dp" app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <Button
            android:text="밥 ㄱ?"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/NoMoney" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/flex" android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>